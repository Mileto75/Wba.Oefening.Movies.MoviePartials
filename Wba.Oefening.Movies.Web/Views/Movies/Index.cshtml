@model MoviesIndexViewModel

<div class="row">
    @foreach(var movie in Model.Movies)
    { 
        <div class="col col-lg-3 mx-auto m-1 text-center">
            <div class="card">
                <!--tips: add .text-center,.text-right to the .card to change card text alignment-->
                <img src="~/images/@movie.Image" class="card-img-top" alt="@movie.Value">
                <div class="card-body">
                    <h5 class="card-title">@movie.Value</h5>
                    <a asp-controller="Movies" asp-action="ShowMovie" asp-route-id="@movie.Id" 
                       class="btn btn-outline-primary">Info</a>
                </div>
            </div>
        </div>
    }
</div>